<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">
    <TextView
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:id="@+id/web_search_title"
        android:text="This is the heading"
        android:textColor="#FFFFFF"
        android:layout_marginRight="16dp"

        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:textSize="30sp"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        android:id="@+id/thumbnail"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@id/web_search_title"/>
    <TextView
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text=".....And this is the news!"
        android:layout_below="@id/web_search_title"
        android:id="@+id/web_search_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textSize="17sp"
        android:layout_marginBottom="16dp"
        android:textColor="#757575"/>


</RelativeLayout>